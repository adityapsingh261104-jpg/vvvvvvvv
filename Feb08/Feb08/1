<script>
const story = [
    { title: "For my Sunnyshine... ðŸ’–", text: "Since the day I met you I've never felt incomplete...." },
    { title: "You are that half in the whole", text: "You complete me-" },
    { title: "You changed things you changed me âœ¨", text: "Days felt lighter. Smiles came easier. And now, you are my favorite thought." },
    { title: "So Here I Am", text: "With a heart full of nothing but loveâ€¦ and one honest question I want to ask." },
    { title: "Will You Be My Valentine???? ðŸŒ¹", text: "", final: true }
];

let index = 0;
const titleEl = document.getElementById("title");
const textEl = document.getElementById("text");
const nextBtn = document.getElementById("nextBtn");
const finalButtons = document.getElementById("finalButtons");
const celebration = document.getElementById("celebration");

function typeText(text, callback) {
    let i = 0;
    textEl.innerHTML = "";
    const interval = setInterval(() => {
        textEl.innerHTML += text.charAt(i);
        i++;
        if (i >= text.length) {
            clearInterval(interval);
            callback();
        }
    }, 70); // slow romantic typing
}

function renderScene() {
    const s = story[index];
    titleEl.innerHTML = s.title;
    nextBtn.style.display = "none";
    finalButtons.style.display = "none";
    celebration.style.display = "none";

    if (!s.final) {
        typeText(s.text, () => {
            nextBtn.style.display = "inline-block";
        });
    } else {
        textEl.innerHTML = "";
        finalButtons.style.display = "flex";
    }
}

nextBtn.onclick = () => {
    index++;
    renderScene();
};

function setupFinalButtons() {
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");

    noBtn.addEventListener("mouseenter", (e) => {
        const r = noBtn.getBoundingClientRect();
        const dx = (r.left + r.width / 2) - e.clientX;
        const dy = (r.top + r.height / 2) - e.clientY;
        const d = Math.sqrt(dx*dx + dy*dy) || 1;
        noBtn.style.transform = `translate(${(dx/d)*120}px, ${(dy/d)*120}px)`;
    });

    yesBtn.onclick = () => {
        finalButtons.style.display = "none";
        celebration.style.display = "block";
        celebration.innerHTML = `
            Woohooooooooo!!! ðŸŽ‰ðŸ’–<br><br>
            ðŸŒ¹ We'll pray for summer breaks<br>
            ðŸ’• We'll love each other like crazy<br>
            ðŸŽ¶ We'll keep our songs as bonding bridge as always<br>
            ðŸ’• Just us, just us AND NO ONE ELSE
        `;
        launchHearts();
    };
}

function launchHearts() {
    for (let i = 0; i < 45; i++) {
        const h = document.createElement("div");
        h.className = "heart";
        h.innerHTML = "â¤ï¸";
        h.style.left = Math.random() * 100 + "vw";
        h.style.animationDuration = (Math.random()*3+3) + "s";
        document.body.appendChild(h);
        setTimeout(() => h.remove(), 6000);
    }
}

renderScene();
setupFinalButtons();
</script>

